<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--注册被代理对象-->
    <bean id="userService" class="model.aop.UserServiceImpl"/>

    <!--注册advice 通知-->
    <bean id="logArgsAdvice" class="model.aop.LogArgsAdvice"/>
    <bean id="resultAdvice" class="model.aop.ResultAdvice"/>


    <!--定义两个advisor  其实就是切点-->
    <bean id="argsRegexpMethodPointcutAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
        <property name="advice" ref="logArgsAdvice"/>
        <property name="pattern" value="* mode.aop.*.*(..)"/>
    </bean>


</beans>